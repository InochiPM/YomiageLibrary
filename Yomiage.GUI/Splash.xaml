<Window x:Class="Yomiage.GUI.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yomiage.GUI"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        BorderThickness="0"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="1" x:Name="image2" Source="./スプラッシュ.png"/>
        <TextBlock x:Name="text" Text="起動中" Height="51" Margin="91,61,108,0" VerticalAlignment="Top" Background="White"/>
        <ProgressBar x:Name="progBar" Margin="20,160,18,39" Minimum="0" Maximum="1" Value="0.0"/>
    </Grid>
</Window>
