<UserControl
    x:Class="Yomiage.GUI.Dialog.Views.ApiDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Yomiage.GUI.Dialog.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel>
        <DockPanel Margin="3" DockPanel.Dock="Bottom">
            <Button
                Margin="0,0,3,0"
                Command="{Binding OkCommand}"
                DockPanel.Dock="Right">
                閉じる
            </Button>
            <Label />
        </DockPanel>
        <StackPanel Margin="3">
            <StackPanel Orientation="Horizontal">
                <Label>
                    API URL :
                </Label>
                <Label Content="{Binding UrlText.Value}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>
                    API テスト
                </Label>
                <Button Command="{Binding OpenCommand}">ブラウザで開く</Button>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</UserControl>
